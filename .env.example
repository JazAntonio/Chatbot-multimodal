# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================
# API KEYS (REQUIRED)
# ===========================
OPENAI_API_KEY=your_openai_api_key_here
INWORLD_API_KEY=your_inworld_api_key_here

# ===========================
# AUDIO CONFIGURATION
# ===========================
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
AUDIO_DTYPE=float32

# ===========================
# FILE PATHS
# ===========================
USER_AUDIO_FILE=output.wav
TTS_AUDIO_FILE=response.wav

# ===========================
# OPENAI CONFIGURATION
# ===========================
OPENAI_STT_MODEL=gpt-4o-mini-transcribe
OPENAI_GPT_MODEL=gpt-5-nano
OPENAI_TEMPERATURE=1.0

# ===========================
# INWORLD TTS CONFIGURATION
# ===========================
INWORLD_TTS_URL=https://api.inworld.ai/tts/v1/voice
INWORLD_VOICE_ID=Hana
INWORLD_MODEL_ID=inworld-tts-1.5-mini

# ===========================
# GUI CONFIGURATION
# ===========================
WINDOW_WIDTH=1200
WINDOW_HEIGHT=600
WINDOW_TITLE=Audio GPT Interface

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=INFO
LOG_FILE=chatbot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=3

# ===========================
# SYSTEM PROMPT
# ===========================
SYSTEM_PROMPT=You are a helpful assistant, please provide only short and concise answers.

# ===========================
# SECURITY CONFIGURATION
# ===========================
# Security level: LOW, MEDIUM, HIGH
# - LOW: Only blocks critical threats
# - MEDIUM: Balanced security (recommended)
# - HIGH: Maximum security, may have false positives
SECURITY_LEVEL=MEDIUM

# Maximum input length in characters
MAX_INPUT_LENGTH=2000

# Maximum tokens per GPT response
MAX_TOKENS_PER_MESSAGE=500

# Enable/disable prompt injection detection
ENABLE_PROMPT_INJECTION_DETECTION=true

# Enable/disable content moderation and rate limiting
ENABLE_CONTENT_MODERATION=true

# Rate limiting: maximum messages per minute
RATE_LIMIT_MESSAGES_PER_MINUTE=10

# Custom blacklist patterns (comma-separated, optional)
# Example: CUSTOM_BLACKLIST_PATTERNS=pattern1,pattern2,pattern3
CUSTOM_BLACKLIST_PATTERNS=
